<div class="container">

  <h1>Create an Account</h1>

<% if !current_user %>

    <form action="/user/new" method='post' class="sign_up">
      
      <% if @error %>
      <div class = "login_error"> <%= @error %> ></div>
      <% end %>

      <label>Name</label>
        <input type="text" class="name" name='name'>
      <label>E-Mail</label>
        <input type="email" class="email" name='email'>
      <label>Password</label>
        <input type="password" class="password" name='password' pattern='.{6,}'>
      <input type="submit" name='submit'>
    </form>

<% end %>



</div>
